@model WebSiteShop_Models.OrderHeader

@*если модель не определена то нужно  показать интерфейс для запроса.
иначе означает что был создан заказ*@

<div class="text-danger">
	@if (Model!=null)
	{
		<h1 class="text-info">Order created</h1>
		<p>Order #@Model.Id has been created successfully</p>
	}
	else{
		<h1 class="text-info">InquiryConfirmation</h1>
		<p>We have recieved your inquiry and someone from our team will contact you shortly!</p>
	}

	<img src="/images/patio.jpg" width="80%" />
</div>


